generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model travelers {
  id_travelers Int @id @default(autoincrement())
  name String 
  lugares_turisticos lugares_turisticos[]
}

model lugares_turisticos {
  id_luegares_turisticos Int @id @default(autoincrement())
  name String 
  direccion String
  release_date DateTime @default(now())
  is_avaliable Boolean @default(true)
  traveler_id Int
  traveler travelers @relation(fields: [traveler_id],references: [id_travelers])
}